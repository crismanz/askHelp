<div id="messages" class="responsive">

<div>
    <p class="card-text">
      <ul>
        <% @messages.each do |message| %>
          <% if message.body %>
            <li style="padding:6px">
              <h3 style="display:inline"><%= message.user.first_name %> </h3><a>  send on <%= message.message_time %></a>
              <p><%= message.body %></p>
            </li>
          <% end %>
        <% end %>

      </ul>
    </p>
</div>

<%= form_for [@conversation, @message] do |f| %>
  <div class="field">
    <%= f.text_area :body, placeholder: "Your message" %>
  </div>

  <%= f.submit "Send", class:"btn"%>
<% end %>

</div>
